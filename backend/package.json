{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "cross-env NODE_ENV=test mocha --timeout 20000 --file test/setup.js \"test//*.test.js\"",
    "bdd": "cross-env NODE_ENV=test cucumber-js --publish-quiet",
    "ui": "mocha ui/*.test.js --timeout 40000",
    "api": "newman run postman_collection.json -e postman_env.json",
    "coverage": "nyc --reporter=text --reporter=html npm test"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "chai": "^5.3.1",
    "cross-env": "^10.0.0",
    "mocha": "^11.7.1",
    "mongodb-memory-server": "^10.2.0",
    "newman": "^6.2.1",
    "nodemon": "^3.1.10",
    "nyc": "^17.1.0",
    "supertest": "^7.1.4"
  },
  "nyc": {
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "exclude": [
      "src/server.js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "check-coverage": true,
    "statements": 80,
    "branches": 70,
    "functions": 80,
    "lines": 80
  }
}
