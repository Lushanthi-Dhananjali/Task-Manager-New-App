{
  "info": {
    "_postman_id": "taskmanager-api",
    "name": "Task Manager API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Auth - Register",
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.environment.set('username', 'postman_' + Date.now());",
              "pm.environment.set('password', '12345');"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('201 Created', function () {",
              "    pm.response.to.have.status(201);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/register",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "register"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      }
    },
    {
      "name": "Auth - Login",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const data = pm.response.json();",
              "pm.test('Token exists', function () {",
              "    pm.expect(data.token).to.be.a('string');",
              "});",
              "pm.environment.set('token', data.token);"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "url": {
          "raw": "{{baseUrl}}/api/auth/login",
          "host": ["{{baseUrl}}"],
          "path": ["api", "auth", "login"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"{{username}}\",\n  \"password\": \"{{password}}\"\n}"
        }
      }
    },
    {
      "name": "Tasks - Create",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('201 Created', function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "const json = pm.response.json();",
              "pm.environment.set('taskId', json._id);",
              "pm.expect(json.title).to.eql('Postman Task');"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/tasks",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tasks"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Postman Task\",\n  \"description\": \"From Postman\"\n}"
        }
      }
    },
    {
      "name": "Tasks - Get",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "const list = pm.response.json();",
              "pm.expect(list).to.be.an('array');"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/tasks",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tasks"]
        }
      }
    },
    {
      "name": "Tasks - Update (done=true)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('200 OK', function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.expect(pm.response.json().done).to.eql(true);"
            ]
          }
        }
      ],
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" },
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tasks", "{{taskId}}"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"done\": true\n}"
        }
      }
    },
    {
      "name": "Tasks - Delete",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('204 No Content', function () {",
              "    pm.response.to.have.status(204);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "DELETE",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tasks", "{{taskId}}"]
        }
      }
    },
    {
      "name": "NEG - Unauthorized GET (no token)",
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "pm.test('401 Unauthorized', function () {",
              "    pm.response.to.have.status(401);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/tasks",
          "host": ["{{baseUrl}}"],
          "path": ["api", "tasks"]
        }
      }
    }
  ]
}
